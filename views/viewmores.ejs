/* Container with grid layout for projects */
.container {
  display: grid;
  grid-template-columns: repeat(3, 1fr); /* 3 items per row */
  max-width: 1200px;
  grid-gap: 80px;
  margin: 0 auto;
  margin-left: 170px;
  justify-items: center;
}

.project-gallery {
  display: grid;
  grid-template-columns: repeat(3, 1fr); /* 3 items per row */
  gap: 30px;
  justify-items: center;
  max-width: 1200px;
